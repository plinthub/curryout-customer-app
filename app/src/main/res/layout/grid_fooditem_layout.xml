<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_first_rounded_corner"
    android:backgroundTint="@color/colorWhite"
    android:id="@+id/linearLayout"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="15dp"
    android:elevation="1dp"
    android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTitle"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:textSize="14sp"
                android:textColor="@color/colorFour"
                android:text=""/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOne"
                    android:text="@string/Rs"
                    android:textSize="16sp"/>

                <!--<ImageView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_weight="0.1"-->
                    <!--android:src="@drawable/rupee"-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--android:textSize="16sp"-->
                    <!--android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorOne"
                    android:text=""
                    android:textSize="20sp"/>

                <LinearLayout
                    android:id="@+id/ln_add"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/btn_add_rounded"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:text="+"/>

                    <TextView
                        android:id="@+id/addToCarttxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="ADD"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_plusMin"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_min"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:backgroundTint="@color/colorTwo"
                        android:background="@drawable/icons8minus100"/>

                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorFour"
                        android:text="1"/>


                    <ImageView
                        android:id="@+id/img_plus"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/colorTwo"
                        android:background="@drawable/icons8plus100"/>


                </LinearLayout>




            </LinearLayout>


</LinearLayout>