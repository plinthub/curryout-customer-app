<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:id="@+id/rl_toolbar">

        <ImageView
            android:id="@+id/fav_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/fav_icon"
            android:backgroundTint="@color/colorWhite"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/fav_filled_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/fav_filled_icon"
            android:backgroundTint="@color/colorWhite"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_Restaurant"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="-50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wabisabi_rest_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/rest_bg"
        android:gravity="bottom"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_marginTop="-190dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_RestaurantsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:text="Wabi Sabi Restaurant"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/veg_green_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_FoodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:text="North Indian | Fast Food | Pure Veg | Sandwich"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="1dp"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/time_icon"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:textColor="@color/colorFour"
                android:id="@+id/txt_FoodTime"
                android:text="25 - 30 mins"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5"
                android:progressTint="@color/colorPrimary"
                android:rating="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:text="500+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="-2dp"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/map_icon"/>


            <TextView
                android:id="@+id/txt_SearchRestAddress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:textColor="@color/colorFour"
                android:text="Random Address, Anonymous Street, Generic Landmark..."/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/star_off_icon"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/txt_SearchRestOffers"
                android:text="50% Off on all order over 200 INR"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>